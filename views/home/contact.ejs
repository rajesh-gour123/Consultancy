<%-layout('layouts/boilerplate') -%>
<section id="contact" class="contact-section py-5">
  <div class="container">

    <h2 class="text-center fw-bold mb-2">Get in Touch</h2>
    <p class="text-center text-muted mb-5">
      Ready to take the next step in your career? Contact us today
    </p>

    <div class="row g-5 align-items-start">

      <!-- LEFT SIDE INFO -->
      <div class="col-lg-5">

        <!-- Office Address -->
        <div class="d-flex mb-4">
          <div class="icon-box me-3">
            <i class="bi bi-geo-alt-fill"></i>
          </div>
          <div>
            <h6 class="fw-bold">Office Address</h6>
            <p class="text-muted mb-0">
              123 Business Plaza, GS Road<br>
              Guwahati, Assam 781005<br>
              India
            </p>
          </div>
        </div>

        <!-- Phone Numbers -->
        <div class="d-flex mb-4">
          <div class="icon-box me-3">
            <i class="bi bi-telephone-fill"></i>
          </div>
          <div>
            <h6 class="fw-bold">Phone Numbers</h6>
            <p class="text-muted mb-0">+91 98765 43210<br>+91 87654 32109</p>
          </div>
        </div>

        <!-- Emails -->
        <div class="d-flex mb-4">
          <div class="icon-box me-3">
            <i class="bi bi-envelope-fill"></i>
          </div>
          <div>
            <h6 class="fw-bold">Email Address</h6>
            <p class="text-muted mb-0">
              info@srijanconsultancy.com<br>
              careers@srijanconsultancy.com
            </p>
          </div>
        </div>

        <!-- WhatsApp -->
        <div class="d-flex">
          <div class="icon-box me-3">
            <i class="bi bi-whatsapp"></i>
          </div>
          <div>
            <h6 class="fw-bold">WhatsApp</h6>
            <p class="text-muted mb-0">+91 98765 43210<br>
              <a href="#" class="text-success fw-semibold">Chat with us â†’</a>
            </p>
          </div>
        </div>

      </div>

      <!-- RIGHT SIDE FORM -->
      <div class="col-lg-7">
        <div class="contact-card shadow rounded-4 p-4">

          <h5 class="fw-bold mb-4">Send us a Message</h5>

          <form action="/contact/mess" method="POST">

            <div class="row g-3">

              <div class="col-md-6">
                <label class="form-label">Name</label>
                <input type="text" name="contact[name]" class="form-control custom-input" placeholder="Your name" required>
              </div>

              <div class="col-md-6">
                <label class="form-label">Email</label>
                <input type="email" name="contact[email]" class="form-control custom-input" placeholder="Your email" required>
              </div>

              <div class="col-12">
                <label class="form-label">Subject</label>
                <input type="text" name="contact[subject]" class="form-control custom-input" placeholder="Message subject" required>
              </div>

              <div class="col-12">
                <label class="form-label">Message</label>
                <textarea name="contact[message]" class="form-control custom-input" rows="4" placeholder="Your message" required></textarea>
              </div>

              <div class="col-12">
                <button class="btn btn-primary w-100 py-2 rounded-pill">Send Message</button>
              </div>

            </div>

          </form>

        </div>
      </div>

    </div>

  </div>
</section>
