<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>
    <%= typeof pageTitle !== "undefined" ? pageTitle + " - Admin" : "Admin Panel" %>
  </title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet">

  <!-- Admin CSS -->
  <link rel="stylesheet" href="/css/admin.css">
</head>

<body>


  <div class="admin-shell">

    <!-- MOBILE TOPBAR -->
    <header class="admin-topbar d-md-none">
      <button id="adminSidebarToggle" class="btn btn-sm btn-outline-light">
        <i class="bi bi-list"></i>
      </button>
      <div class="topbar-title">
        <%= typeof pageTitle !== "undefined" ? pageTitle : "Admin Panel" %>
      </div>
    </header>

    <!-- SIDEBAR -->
    <aside id="adminSidebar" class="admin-sidebar">
      
      <div class="sidebar-brand mb-3">
        <div class="brand-title">Srijan Admin</div>
      </div>

      <nav class="sidebar-nav">
        <a href="/admin/dashboard"
           class="nav-link <%= currentRoute?.startsWith('/admin/dashboard') ? 'active' : '' %>">
          <i class="bi bi-speedometer2"></i> Dashboard
        </a>

        <a href="/admin/createNewPost"
           class="nav-link <%= currentRoute?.startsWith('/admin/createNewPost') ? 'active' : '' %>">
          <i class="bi bi-plus-square"></i> Create Job
        </a>

        <a href="/admin/resumeAll"
           class="nav-link <%= currentRoute?.startsWith('/admin/resumeAll') ? 'active' : '' %>">
          <i class="bi bi-people-fill"></i> Applications
        </a>

        <a href="/admin/messages"
           class="nav-link <%= currentRoute?.startsWith('/admin/messages') ? 'active' : '' %>">
          <i class="bi bi-envelope-fill"></i> Messages
        </a>
      </nav>

      <!-- FOOTER -->
      <div class="sidebar-footer mt-auto">
        <% if (currentUser) { %>
          <div class="sidebar-user mb-2">
            <small class="muted">Logged in as</small>
            <div class="username"><%= currentUser.username %></div>
          </div>
        <% } %>

        <a href="/logout" class="btn btn-light w-100">Logout</a>
      </div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="admin-main">
      <div class="container-fluid p-3">

        <!-- PAGE HEADER -->
        <div class="d-flex justify-content-between align-items-center mb-3">
          <div>
            <h4 class="mb-0">
              <%= typeof pageTitle !== "undefined" ? pageTitle : "Admin" %>
            </h4>
            <small class="text-muted">
              <%= typeof pageSubtitle !== "undefined" ? pageSubtitle : "" %>
            </small>
          </div>
        </div>

        <!-- PAGE BODY -->
        <%- body %>
      </div>
    </main>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Sidebar Toggle Script -->
  <script src="/js/admin.js"></script>

</body>
</html>
